apiVersion: v1
kind: Service
metadata:
  name: vdi
spec:
  type: ClusterIP
  clusterIP: None
  selector:
    app.kubernetes.io/instance: {{.FullName}}
    app.kubernetes.io/name: {{.App}}
  ports:
    # Port 80 is the default port routed by the pod broker.
    - port: 80
      name: http-web
      targetPort: 8082
    - port: 8082
      name: http-webrtc
      targetPort: 8082
    - port: 8842
      name: http-rapps
      targetPort: 8842